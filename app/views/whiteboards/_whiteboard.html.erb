<div class="row spacer">
  <div class="col-md-1"><% if whiteboard.user.try(:avatar) == nil then %>
    <%= image_tag "/assets/fallback/small_small_avatar.png", class: "border-radius-50", id: "image-comment"  %></span>
<% else %>
  <%= image_tag whiteboard.user.avatar.small_small.url, class: "border-radius-50", id: "image-comment" %>
<% end %></div>
  <div class="col-md-11">
    <span class="capitalize2">
    <% if whiteboard.user.try(:name) || whiteboard.user.try(:surname) == nil then %>
      <b>Deleted User</b>
    <% else %>
      <b><%= whiteboard.user.name %> &nbsp <%= whiteboard.user.surname %></b></span>&nbsp 
        <%= time_ago_in_words(whiteboard.created_at) %> ago 
       <% end %>
      
	      
    <div class="border-bot-dgrey">
      <p id= "whiteboard-content" ><%= whiteboard.content %></p>
      <% if can? :update, whiteboard%>
        <%= link_to 'Edit', edit_property_whiteboard_path(whiteboard.property_id, whiteboard)  %>
      <% end %>
      <% if can? :destroy, whiteboard%>
        <%= link_to 'Delete', property_whiteboard_path(whiteboard.property_id, whiteboard), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
    <div class="spacer"></div>
  </div>
</div>