<table class = "table table-bordered table-striped">
   <thead>
      <tr>
       
         <th>Property id</th>
         <th>Flat Nr.</th>
         <th>Owner</th>
         <th>Email</th>
         <th>Phone </th>
         <th>Move in date</th>
         <th>Delete</th>
         
      </tr>
   </thead>
   <tbody>
   
		<% @flats.each do |flat| %>
         
      <tr>  
         
            <td><%= flat.property_id %></td>
            <td><%= flat.flat_nr %></td>
            <td><%= flat.name %></td>
            <td><%= flat.email %></td>
            <td><%= flat.phone %></td>
            <td><%= flat.join_date.try(:strftime, "%d/%m/%Y") %></td>
            
         <td><%= link_to 'Delete Flat', cpanel_postflat_path(@user, flat), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %></td>
            
         </tr>      
      	<% end %>
         
  </tbody>
  </table>
