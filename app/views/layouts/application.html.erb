<!DOCTYPE html>
<html>
  <head>
    <title>Apartment</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <% if user_signed_in? %>
    <h4>Signed in as <%= current_user.name %>&nbsp <%= current_user.surname %> &nbsp(<%= current_user.role.name%>)</h4>
    
    
    <div class="navbar navbar-default">
      <ul class="nav navbar-nav">
      <% if can? :read, Cpanel%>
      <li><%= link_to 'Control Panel',cpanel_index_path %></li>
      <% end %>
      <li><%= link_to 'Submit Ticket',new_ticket_path %></li>
      <% if can? :update, Ticket %>
      <li><%= link_to 'Tickets',tickets_path %></li>
      <% end %>
      <li><%= link_to 'Properties',properties_path %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">

      <li><%= link_to 'Edit Profile',edit_user_registration_path %></li>
      <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %>  </li> </ul>
    </div>
  	<% end %>
  

    <%= yield %>
  </body>
</html>
