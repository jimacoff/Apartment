<!DOCTYPE html>
<html>
  <head>
    <title>Apartment</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid bg-main">  
      <div class="row "> 
          <% if user_signed_in? %>
            <div class="col-md-2 nav-bg min-height row-70">
            <div class="row prof-bg">
            <div class="col-md-12">
                  <div class="navbar-header width100 margin0">
                    <div class="prof-pic"><%= image_tag current_user.avatar.medium.url, class: "border-radius-50 img-responsive" %></div>     <ul class="nav navbar-nav drop-nav">  
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><h4><%= current_user.name %>&nbsp <%= current_user.surname %> <b class="caret"></b></h4></a>
                        <ul class="dropdown-menu drop-bg">
                         <li><%= link_to 'Edit Profile',edit_user_registration_path %></li>
                         <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %>  </li>
                        </ul>
                      </li>
                    </ul>
                  </div>
                  </div>
                  </div>
                  <div class="navbar-header width100">
                    <ul class="nav margin-lr-0 main-nav-bg">
                    <h4 class="light-blue">Main</h4>
                
                        <li class="<%= 'active' if current_page?(properties_path) %>"><%= link_to ' PROPERTIES',properties_path, class: "glyphicon glyphicon-home" %></li> 
                        <li class="<%= 'active' if current_page?(properties_path) %>"><%= link_to ' FLATS',properties_path, class: "glyphicon glyphicon-th" %></li> 
                        
                    </ul> 
                    
                     <ul class="nav margin-lr-0 main-nav-bg"> 
                     <h4 class="light-blue">User</h4>
                        <li class="<%= 'active' if current_page?(properties_path) %>"><%= link_to ' MY PROPERTIES',properties_path, class: "glyphicon glyphicon-home" %>
                          
                        </li> 
                        <li class="<%= 'active' if current_page?(properties_path) %>"><%= link_to ' MY FLATS',properties_path, class: "glyphicon glyphicon-th-large mo" %></li> 
                        <% if can? :read, Cpanel%>       
                        <li class="<%= 'active' if current_page?(tickets_path) %>"><%= link_to ' TICKETS',tickets_path, class:"glyphicon glyphicon-headphones" %></li>
                      <% end %>
                        <li class="<%= 'active' if current_page?(mailbox_inbox_path) %>"><span class="label label-danger pull-right unread-mes" ><%=unread_messages_count%></span><%= link_to "  MESSAGES", mailbox_inbox_path, class: "glyphicon glyphicon-envelope" %></li>
                    </ul>
                    
                    <ul class="nav margin-lr-0 main-nav-bg">
                    <h4 class="light-blue">Admin</h4>
                      <% if can? :read, Cpanel%>
                        <li class="<%= 'active' if current_page?(cpanel_index_path) %>"><%= link_to ' CONTROL PANEL',cpanel_index_path, class: "glyphicon glyphicon-eye-open" %></li>
                      <% end %>
                    </ul> 

                  </div>  

            </div>     
            <div class="col-md-10">
                <div class="row search">
               
                  <div class="col-md-12 input-group input-group-lg">
                    <%= form_tag search_index_path, class:"input-group-lg input-group", :method => 'get' do%>
                       <span class="input-group-btn">
                          <%= link_to '', :back , class:"btn btn-default btn-lg glyphicon glyphicon-arrow-left" %>
                       </span>
                       <div class="search-bar">
                          <%= text_field_tag :search, params[:search], required: true, class:"form-colntrol input-lg input-field-search border0  ", placeholder:"Search for property or flat.."%>
                       </div>
                       <span class="input-group-btn">
                          <%= button_tag '', type: 'submit', class:"btn btn-default btn-lg glyphicon glyphicon-search border0"%>
                       </span>
                    <% end %>
                  </div>
                </div>
              <%= yield %> 
          </div>
        <% else %>
          <div class="col-md-12">
              <%= yield %> 
          </div>
        <% end %> 
      </div>
    </div>
  </body>
</html>
