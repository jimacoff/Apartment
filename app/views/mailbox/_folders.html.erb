    <%= link_to 'Trash', mailbox_trash_path, class: if @url.include?('trash') then  'btn btn-lg nav-btn border0 btn-default no-border border-bot' else 'btn btn-lg nav-btn border0 no-border' end  %>
    <div class="spacerem"></div>
  </div>
