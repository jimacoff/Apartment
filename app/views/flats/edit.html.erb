<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<h1>Editing Flat</h1>

<%= form_for ([@property, @flat]) do |f| %>
	<div class="row">
	<div class="col-md-6 col-lg-6">
		<%= f.label 'Owners name *'%>
		<%= f.text_field :name,required: true %>
		<br />
		<%= f.label 'Apartment number *'%>
		<%= f.text_field :flat_nr,required: true %>
		<br />
	   	<%= f.label :Phone_number %>
	   	<%= f.telephone_field :phone%>
	   	<br />
	   	<%= f.label :Email %>
	   	<%= f.email_field :email%>
	   	<br />
	   	<%= f.label :Room_count %>
	   	<%= f.text_field :rooms%>
	   	
   	</div>
    <div class="col-md-6 col-lg-6">
    
	    <%= f.label 'Move in date *' %>
	    <i>(dd/mm/yyyy)</i>
	    <br/>
	    <%= f.date_field(:join_date, max: Date.today,required: true) %>
	    <br />
	    
	   	<%= f.label :Relatives %>
	   	<%= f.text_field :relatives%>
	   	<br />
	   	<%= f.label :More_persons %>
	   	<%= f.text_area :morepersons%>
	   	<br />
		<%= f.label :Caretaker%>
		<%= f.text_field :caretaker %>
		<br />
		<%= f.label :Description %>
	    <%= f.text_area :content %>
	    <br />
    </div>
    </div>
    <%= link_to 'Back', property_path(@flat.property_id) %><br />
    <div class="col-md-4 col-md-offset-4">
    <%= f.submit "Edit flat" %>
    <br />
    <br />
    <% if can? :update, @flat%>
	          <%= link_to 'Delete', property_flat_path(@flat.property_id, @flat), method: :delete ,class: "btn btn-danger"%>
	<% end %>
	</div>
 <% end -%>

