<div class="spacer"></div>
<div class="row bg-white margin-lr-0 ">
  <div class="col-md-12 ">
    <div class=" row properties-nav nav-bg ">
      <div class="col-md-12" >
        <h2 class="h3white centr-title capitalize">New Document</h2>
      </div>
    </div>
  </div>
  <%= form_for ([@property, @property.documents.build]), html: { multipart: true }  do |f| %>
    <% if @document.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>
        <ul>
          <% @document.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-lg-6">
        <div class="spacer2"></div>
        <div class="row">

          <div class="col-md-12">
            <span class="form-title"><%= f.label "File Name *" %></span>
            <span class="form-field pad-top-forms"><%= f.text_field :name, required: true%></span>
          </div>
          <div class="col-md-12 spacer2">
            <span class="form-title"><%= f.label 'Attachment *'%></span>
            <span class="form-title pull-right file-input"><%= f.file_field :attachment, required: true  %></span>
          </div>
        </div>
      </div>
      <div class="col-md-12 text-center">
        <div class="spacer"></div>
        <%= f.button class: "btn btn-lg nav-bg new-btn white border0 lblue-hover btn-ticket" do %>
          <span class="glyphicon glyphicon-send"></span><span class="pad-r-1">Save Document</span>
        <% end %>
        <div class="spacer"></div>
      </div>
    </div>
  <% end %>
</div>