<div class="spacer"></div>
<div class="row bg-white margin-lr-0 ">
   <div class="col-md-7 padding-lr-0">
   <%= image_tag @property.property_image.medium_land.url , class:"property-img-show " %>
   </div>
   <div class=" col-md-5 properties-nav  ">
      <div class="row">  
       <div class="col-md-12 nav-bg text-center">
        <h1 class="h3white properties-title" ><%= @property.housename %></h1> 
       </div>
         <div class="col-md-12">
            <h4>Address: <%= @property.address %></h4>   
         </div>
         <div class="col-md-12">
            <h4>Zip Code: <%= @property.zipcode %> <%= @property.city %></h4>   
         </div>
         <div class="row">
           <div class="col-md-4 text-center">
              <h4><%= image_tag @property.user.avatar.small_small.url, class: "border-radius-50" %></h4>   
           </div>
           <div class="col-md-8">
              <h4>Property owned by: <br> <b><%= @property.user.name %> <%= @property.user.surname %></b></h4>   
           </div>
         </div>
       </div>
       <div class="row nav-bg pad-bot-0">
          <div class="col-md-6">
              <div class="pull-right new-prop-btn "><%= link_to "Edit", edit_property_path(@property), class: "btn btn-lg new-btn border0 " %></div>
         </div>
         <div class="col-md-6">
              <div class="pull-right new-prop-btn "><%= link_to "Delete", property_documents_path(@property), class: "btn btn-lg new-btn border0 " %></div>
         </div>
       </div>
      
   </div>
</div>
<div class="spacer"></div>

<div class="row bg-white margin-lr-0">
   <div class="col-md-12">
      <div class=" row properties-nav nav-bg">       
            <div class="col-md-8" >
               <h1 class="h3white properties-title">Flats</h1>  
            </div>      
            <div class="col-md-2">
                <% if can? :read, Property%>
                  <div class="pull-right new-prop-btn "><%= link_to "Property Documents", property_documents_path(@property), class: "btn btn-lg new-btn border0 " %>
                  </div>
               <% end %>
            </div> 
            <div class="col-md-2">
                <% if can? :read, Property%>
                  <div class="pull-right new-prop-btn "><%= link_to 'Add New flat', new_property_flat_path(@property), class: "btn btn-lg new-btn border0 " %>
                  </div>
               <% end %>
            </div>   
      </div>
      <div class="row">
        <% if @property.flats.any? %>
  <table class = "table table-bordered table-striped">
    <thead>
      <tr>   
         <th>Flat Nr.</th>
         <th>Owner</th>
         <% if can? :read, Flat%>
         <th>Content</th>
         <% end %>
         <% if can? :update, Flat%>
          <th>Edit</th>
         <% end %>
         <% if can? :destroy, Flat%>
         <th>Delete</th>
         <% end %>
         
      </tr>
    </thead>
    <tbody>
      <% @property.flats.each do |flat| %>   
           
        <tr>

          <td><%= flat.flat_nr %></td>
          <td><%= flat.name %></td>
          <% if can? :read, Flat%>
            <td>
              <%= link_to 'Show', property_flat_path(flat.property_id,flat),class: "btn btn-success" %>    
            </td>
          <% end %>
          <% if can? :update, flat%>
            <td> 
                <%= link_to 'Edit', edit_property_flat_path(flat.property_id,flat), class: "btn btn-warning"%>   
            </td>
          <% end %>
          <% if can? :destroy, flat%>
          <td>
            <%= link_to 'Delete', property_flat_path(flat.property_id, flat), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
          </td>
          <% end %>
        </tr>      
      <% end %>
    </tbody>  
  </table>
<% end %>
      </div>
   </div>
</div>







<br />
<h2>Whiteboard</h2>
<div class="row">
  <div class="col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2">
        <h4>Comments</h4>
        <% if @property.whiteboards.size > 3 %>
          <div style="height:50vh;overflow:auto;"> 
            <%= render @property.whiteboards %> 
          </div>
          <% else%>
          <div>
            <%= render @property.whiteboards %> 
          </div>

        <% end %>
        <br />
       <% if can? :update, @property%>
            <%= form_for ([@property, @property.whiteboards.build]) do |f| %>
              <div ><%= f.text_area :content, cols: "78", rows: "3"%><br/>
              <%= submit_tag "Submit",class: "btn btn-info" %></div>
            <% end %> 
      <% end %>
       
    </div>
</div>
<br />
<h3><%= link_to 'Back', properties_path %></h3>
