
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<h1>Editing User</h1>

<%= form_for @user do |f| %>
	<div class="row">
		<div class="col-md-6 col-lg-6">
			<div><%= f.label :name %>
		        <%= f.text_field :name, autofocus: true %></div>
		    <div><%= f.label :surname %>
		        <%= f.text_field :surname, autofocus: true %></div>
		    <div><%= f.label :email %>
		        <%= f.email_field :email %></div>
		    <div><%= f.label :address %>
		        <%= f.text_field :location, autofocus: true %></div><br/><br/>
		    <div><%= f.label :User_Role %>
			    <%= f.select(:role_id) do %>
			       <% [['Registered', 7],['Admin', 8], ['Property Owner', 9],['Flat Owner', 10],['Support', 11]].each do |c| %>
			          <%= content_tag(:option, c.first, value: c.last) %>
			       <% end %>
			    <% end %>              
		    </div>

		</div>
	    <div class="col-md-4 col-md-offset-4">
	    <%= f.submit "Save changes" %>  
		</div>
	</div>
<% end -%>

