<p id="notice"><%= notice %></p> 
<div class="row bg-white margin-lr-0 overflow">
   <div class="col-md-12">
      <div class=" row properties-nav nav-bg">       
            <div class="col-md-9" >
               <h1 class="h3white properties-title">Flats</h1>  
            </div>      
            <div class="col-md-3">
                
            </div>  
      </div>
      <table class = "table table-bordered table-striped">
   <thead>
      <tr>
       
         <th>Property id</th>
         <th>Flat Nr.</th>
         <th>Owner</th>
         <th>Email</th>
         <th>Phone </th>
         <th>Move in date</th>
         <th>Show</th>
         <th>Edit</th>
         <th>Delete</th>
         
      </tr>
   </thead>
   <tbody>
   
      <% @flats.each do |flat| %>
         
      <tr>  
         
            <td><%= flat.property_id %></td>
            <td><%= flat.flat_nr %></td>
            <td><%= flat.name %></td>
            <td><%= flat.email %></td>
            <td><%= flat.phone %></td>
            <td><%= flat.join_date.try(:strftime, "%d/%m/%Y") %></td>
            
            <td><%= link_to 'Show', property_flat_path(flat.property_id,flat),class: "btn btn-success" %>  </td>  
            <td><%= link_to 'Edit', edit_property_flat_path(flat.property_id,flat), class: "btn btn-warning"%> </td>
            <td><%= link_to 'Delete Flat', property_flat_path(flat.property_id,flat), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %></td>
            
         </tr>      
         <% end %>
         
  </tbody>
  </table>
      
   </div>
</div>

