<%= link_to 'Back', property_path(@property) %>
<h1>New Flat</h1>
<%= form_for ([@property, @property.flats.build]) do |f| %>
	<div class="row">
	<div class="col-md-6 col-lg-6">
		<%= f.label :Owners_Name%>
		<%= f.text_field :name %>
		<br />
		<%= f.label :Apartment_number%>
		<%= f.text_field :flat_nr %>
		<br />
	   	<%= f.label :Phone_number %>
	   	<%= f.telephone_field :phone%>
	   	<br />
	   	<%= f.label :Email %>
	   	<%= f.email_field :email%>
	   	<br />
	   	<%= f.label :Room_count %>
	   	<%= f.text_field :rooms%>
	   	
   	</div>
    <div class="col-md-6 col-lg-6">
    
	    <%= f.label :Move_in_date %>
	    <i>(dd/mm/yyyy)</i>
	    <br/>
	    <%= f.date_field(:join_date, max: Date.today) %>
	    <br />
	    
	   	<%= f.label :Relatives %>
	   	<%= f.text_field :relatives%>
	   	<br />
	   	<%= f.label :More_persons %>
	   	<%= f.text_area :morepersons%>
	   	<br />
		<%= f.label :Caretaker%>
		<%= f.text_field :caretaker %>
		<br />
		<%= f.label :Description %>
	    <%= f.text_area :content %>
	    <br />
    </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
    <%= f.submit "Add new flat" %>
    </div>
	
<% end %>




