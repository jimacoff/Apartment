<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Name</th>
         <th>Surname</th>
         <th>Admin </th>
         <th>Posts</th>
         <th>Delete</th>
         
      </tr>
   </thead>
   <tbody>
		<% @users.each do |user| %>
         
         <tr>
            <td><%= user.name %></td>
            <td><%= user.surname %></td>
            <td><%= user.admin%></td>
            <td><%= link_to cpanel_posts_path(user) do %>
            <%= user.properties.size %>
            	<% end %>
            </td>
            <td><%= link_to 'Delete User', cpanel_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %></td>
            
         </tr>
         
      	<% end %>
  </tbody>