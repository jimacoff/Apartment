<p id="notice"><%= notice %></p>
<p>
  
  <h2><%= @property.content %></h2>
  <h3>Property owned by: <%= @property.user.name %> </s> <%= @property.user.surname %></h3>
  
</p>
 <% if @property.flats.any? %>
          <h4>Flats</h4>
          <%= render @property.flats %>
        <% end %>

        <br>
        <p>Add Flat</p>
        <%= form_for ([@property, @property.flats.build]) do |f| %>
          <%= f.text_area :content %>
          <%= submit_tag "Add" %>
        <% end %>

        

<% if can? :update, @property%>
<%= link_to 'Edit', edit_property_path(@property) %> 
<% end %>
